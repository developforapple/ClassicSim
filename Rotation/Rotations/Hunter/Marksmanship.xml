<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<rotation class="Hunter" name="Aimed/Multi-Shot" name_zh="瞄准/多重射击" attack_mode="ranged">
    <description>
        <en>A rotation for Markmanship hunters that cycles Aimed Shot and Multi-Shot close to the auto shot timer.</en>
        <zh>射击猎在自动射击间隙循环使用瞄准射击和多重射击进行输出</zh>
    </description>

    <precombat_actions>
        <spell name="Aspect of the Hawk" name_zh="雄鹰守护"/>
        <spell name="Hunter's Mark" name_zh="猎人印记"/>
        <precast_spell name="Aimed Shot" name_zh="瞄准射击"/>
    </precombat_actions>

    <cast_if name="Rapid Fire" name_zh="急速射击">
        <en>variable "time_remaining_encounter" greater 300
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Kiss of the Spider" name_zh="蜘蛛之吻">
         <en>variable "time_remaining_execute" greater 120
         or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Jom Gabbar" name_zh="沙虫之毒">
        <en>variable "time_remaining_execute" greater 120
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Badge of the Swarmguard" name_zh="虫群卫士徽章">
        <en>variable "time_remaining_execute" greater 120
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Slayer's Crest" name_zh="屠龙者的纹章">
        <en>variable "time_remaining_execute" greater 120
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Earthstrike" name_zh="大地之击">
        <en>variable "time_remaining_execute" greater 120
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Devilsaur Eye" name_zh="魔暴龙眼">
         <en>variable "time_remaining_execute" greater 120
         or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Zandalarian Hero Medallion" name_zh="赞达拉英雄勋章">
        <en>variable "time_remaining_execute" greater 120
        or variable "time_remaining_execute" less 0</en>
    </cast_if>

    <cast_if name="Blood Fury" name_zh="血性狂暴（种族特长）">
        <en>variable "time_remaining_execute" less 0
        or variable "time_remaining_execute" greater 120</en>
    </cast_if>

    <cast_if name="Berserking" name_zh="狂暴">
        <en>variable "time_remaining_execute" less 0
        or variable "time_remaining_execute" greater 180</en>
    </cast_if>

    <cast_if name="Bestial Wrath" name_zh="狂野怒火"/>

    <cast_if name="Aimed Shot" name_zh="瞄准射击">
        <en>variable "time_since_auto_shot" less 0.3</en>
    </cast_if>

    <cast_if name="Multi-Shot" name_zh="多重射击">
        <en>variable "time_since_auto_shot" less 0.3</en>
    </cast_if>

    <cast_if name="Hunter's Mark" name_zh="猎人印记">
        <en>buff_duration "Hunter's Mark" less 10</en>
        <zh>buff_duration "猎人印记" less 10</zh>
    </cast_if>

    <cast_if name="Aspect of the Hawk" name_zh="雄鹰守护">
        <en>buff_duration "Aspect of the Hawk" less 10</en>
        <zh>buff_duration "雄鹰守护" less 10</zh>
    </cast_if>

    <cast_if name="Mana Potion" name_zh="法力药水"/>
    <cast_if name="Demonic Rune" name_zh="恶魔符文"/>
    <cast_if name="Night Dragon's Breath" name_zh="夜龙之息"/>
</rotation>
